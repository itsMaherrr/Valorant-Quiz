<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="#BF05060A" android:startColor="#B305060A" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#BB3A4467" android:startColor="#BB3A4467" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>